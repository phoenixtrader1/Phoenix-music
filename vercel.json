{
  "version": 2,
  "builds": [
    { "src": "api/generate.py", "use": "@vercel/python" },
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/generate.py" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ],
  "env": {
    "HF_API_KEY": "@hf_api_key"
  }
}
